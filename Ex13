def Calculo_de_Peso():
    Sexo = input("Qual seu gÃªnero: ")
    Altura = float(input("Digite sua altura: "))
    Peso_Ideal = (72.7 * Altura) - 58 or (62.1 * Altura) - 44.7
    if Sexo == 'Homem':
        Peso_Ideal = (72.7 * Altura) - 58
    else:
        Peso_Ideal = (62.1 * Altura) - 44.7
    return Peso_Ideal
Resultado = Calculo_de_Peso()
print(Resultado)
